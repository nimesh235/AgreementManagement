@model AgreementManagement.Models.Agreement

@{ if (Model.Id == 0)
    {
        ViewData["Title"] = "Create";
    }
    else
    {
        ViewData["Title"] = "Edit";
    }
}



<hr />
@if (ViewBag.successMessage != null)
{
    <div id="successMessage" class="alert alert-success">
        <strong>Success:</strong> @ViewBag.successMessage
    </div>
}
else if (ViewBag.ErrorMessage != null)
{
<div id="successMessage" class="alert alert-danger">
    <strong>Success:</strong> ViewBag.ErrorMessage
</div>
}
<div class="row">
    <div class="col-md-12">
        <form id="CreateUpdateAgreement" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="UserId" />
            <div class="form-group row">
                <label class="control-label col-md-6" >ProductGroup</label>
                <select  class="form-control col-md-6" id="ProductGroupId" asp-items="ViewBag.ProductGroupId"></select>
                <span class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="ProductId" class="control-label col-md-6"></label>
                <select asp-for="ProductId" class="form-control col-md-6" asp-items="ViewBag.ProductId"></select>
                <span asp-validation-for="ProductId" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="EffectiveDate" class="control-label col-md-6"></label>
                <input asp-for="EffectiveDate" class="form-control Datepicker col-md-6" type="text" placeholder="mm/dd/yyyy" />
                <span asp-validation-for="EffectiveDate" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="ExpirationDate" class="control-label col-md-6"></label>
                <input asp-for="ExpirationDate" class="form-control Datepicker col-md-6" type="text" placeholder="mm/dd/yyyy" />
                <span asp-validation-for="ExpirationDate" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="NewPrice" class="control-label col-md-6"></label>
                <input asp-for="NewPrice" class="form-control col-md-6" />
                <span asp-validation-for="NewPrice" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="Active" class="control-label col-md-6"></label>
                <div class="checkbox  col-md-6">

                    <input type="checkbox" data-val="true" asp-for="Active">
                </div>
            </div>

        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
